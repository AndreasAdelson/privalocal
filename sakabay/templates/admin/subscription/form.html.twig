{% extends 'base.html.twig' %}

{% block title %}
  {% if subscriptionId is same as("null") %}
    {{ 'subscription_title_create_page'|trans }}
  {% else %}
    {{ 'subscription_title_edit_page'|trans }}
  {% endif %}
{% endblock %}

{% block body %}
  {% if subscriptionId is same as("null") %}
    <h1 class="fontUbuntuItalic orange-skb text-center p-1">{{ 'subscription_title_create_page'|trans }}</h1>
  {% else %}
    <h1 class="fontUbuntuItalic orange-skb text-center p-1">{{ 'subscription_title_edit_page'|trans }}</h1>
  {% endif %}
<form-subscription :subscription-id="{{ subscriptionId }}" token="{{ csrf_token('subscription') }}"></form-subscription>
{% endblock %}
